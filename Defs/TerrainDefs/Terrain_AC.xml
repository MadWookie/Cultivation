<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- New Terrain -->
	<TerrainDef Name="AC_TerrainBase" Abstract="True">
		<edgeType>Hard</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<designationCategory>Floors</designationCategory>
		<constructEffect>ConstructDirt</constructEffect>
		<pathCost>5</pathCost>
		<affordances>
			<li>Light</li>
      <li>Medium</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<avoidWander>true</avoidWander>
    <generatedFilth>Filth_Dirt</generatedFilth>
		<takeFootprints>True</takeFootprints>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
	</TerrainDef>

	<TerrainDef ParentName="AC_TerrainBase">
		<defName>AC_SoilTilled</defName>
		<label>tilled soil</label>
		<description>Tilled soil with %90 fertility. Note that this is lower than rich soil, and will reduce fertility!</description>
		<texturePath>SoilTilled</texturePath>
		<layerable>true</layerable>
		<statBases>
			<Beauty>0.5</Beauty>
			<WorkToBuild>1000</WorkToBuild>
		</statBases>
		<fertility>0.9</fertility>
		<researchPrerequisites>
      <li>AC_Tilling</li>
    </researchPrerequisites>
	</TerrainDef>

